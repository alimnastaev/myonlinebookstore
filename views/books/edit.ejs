<% include ../partials/header %>


  <div class='row'>
    <h1 style='text-align: center; color: white;'>Edit Your Book</h1>
    <div style='width:30%; margin: 25px auto;'>
      <form action="/books/<%= book._id %>?_method=PUT" method='POST'>
        <div class='form-group'>
          <input class='form-control' type='text' placeholder='Book Title and Author' name='book[name]' value="<%= book.name %>">
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' placeholder='Image URL' name='book[image]' value="<%= book.image %>">
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' placeholder='Condition Description + Contact Info' name='book[description]' value="<%= book.description %>">
        </div>
        <div class='form-group'>
          <input class='form-control' type='number' placeholder='Price in $ with OBO' name='book[price]' value="<%= book.price %>" min='0.01' step='0.01'> 
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>UPDATE</button>
        </div>
      </form>
      <a href='/books'>Back</a>
    </div>
  </div>

<% include ../partials/footer %>
