<% include ../partials/header %>


  <div class='row'>
    <h1 style='text-align: center; color: white;'>Create a New Book</h1>
    <div style='width:30%; margin: 25px auto;'>
      <form action='/books' method='POST'>
        <div class='form-group'>
          <input class='form-control' type='text' name='name' placeholder='Book Title and Author'>
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' name='image' placeholder='Image URL'>
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' name='description' placeholder='Condition Description + Contact Info'>
        </div>
        <div class='form-group'>
          <input class='form-control' type='number' name='price' placeholder='Price in $ with OBO' min='0.01' step='0.01'>
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>SUBMIT</button>
        </div>
      </form>
      <a href='/books'>Back</a>
    </div>
  </div>

<% include ../partials/footer %>
